extends layout

block content
  div.container-fluid
     .row
      div.col-md-6
        div.panel.panel-default
          div.panel-heading.text-center
            h1 Device List for Hyposure
          div.panel-body
            table.table
              each device in devices
                tr
                  td.device
                    span.bg-info= device.id
                  td.device
                    span.bg-info= device.name
                  td.device
                    button.deactivate(onclick='', class="btn btn-sm btn-info") Disconnect
                  td.device
                    button.activate(onclick='', class="btn btn-sm btn-info") Connect
