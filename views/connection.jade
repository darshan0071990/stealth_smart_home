extends layout
block content
  div.container-fluid
     .row
      div.col-md-6.main-raised
        div.panel.panel-default
          div.panel-heading.text-center
            h1 Discovered Devices
          div.panel-body
            table.table
              each device in devices
                tr
                  td.device
                    span= device.id
                  td.device
                    span= device.name
                  td.device
                    div.togglebutton
                      label
                        input.switch_btn(type="checkbox")
                        span.toggle
