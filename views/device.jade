extends layout

block content
  div.container-fluid
     .row
      div.col-md-6.main-raised
        div.panel.panel-default
          div.panel-heading.text-center
            h1 Registered Devices
          div.panel-body
            table.table
              each device in devices
                tr
                  td.device
                    span.bg-info= device.id
                  td.device
                    span.bg-info= device.name
                  td.device
                    button.device(onclick='alert("LALLALALALLA")', class="btn btn-sm btn-info") Show

